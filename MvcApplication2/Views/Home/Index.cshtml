@model MvcApplication2.Models.Person[]
<script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#PCNum").change(function () {
            $("#State").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetStates")', 
 
                dataType: 'json',
 
                data: { id: $("#PCNum").val() }, 

                success: function (states) {
 
                    $.each(states, function (i, state) {
                    $("#State").append('<option value="' + state.Value + '">' +  
                         state.Text + '</option>');                                                                                                
 
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })
    });
</script>

<div class="row section">
    <form class="col s12" method="post" action="/Home/Add">
      <div class="row">
        <div class="editor-label">
            <label>Name</label>
        </div>
        <div class="editor-field">            
            <input id="name" name="name" type="text" class="validate">
        </div>
        <div class="editor-label">
            <label>Card</label>
        </div>
        <div class="editor-field">
            <input id="card" name="card" type="text" class="validate">
        </div>
        <div class="editor-label">
            <label>Date</label>
        </div>
        <div class="editor-field">
            <input id="date" name="date" type="text" class="validate">
            <span style="font-weight: bold; color: red;">e.g DD/MM/YYYY</span>&nbsp;
        </div> 
        <div class="editor-label">
            <label>PC No.</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("PCNum", ViewData["pcNum"] as List<SelectListItem>)
        </div> 
        <div class="editor-label">
            <label>Time Period</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("State", new SelectList(string.Empty, "Value", "Text"))
        </div>
      </div>
        <div class="row">
            <div class="input-field col s12 right-align">
                <input type="submit" value="submit" class="btn">
            </div>
        </div>
    </form>
</div>
<h2>Booking Information
</h2>
<div class="row section">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Card</th>
                <th>Date</th>
                <th>PC No.</th>
                <th>Time Period</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Card</td>
                    <td>@person.Date</td>
                    <td>@person.PCNum</td>
                    <td>@person.State</td>
                    <td>
                        <a class="btn edit-person" href="@Url.Action("Edit", new { person.Id })">Edit</a>
                        <a class="btn delete-person" data-id="@person.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form id="delete-form" method="post" action="/Home/Delete">
        <input id="person-id-for-delete" name="id" type="hidden" value="" />
    </form>
</div>

@section scripts{
    <script src="/Scripts/Index.js"></script>
}