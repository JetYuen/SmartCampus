@model MvcApplication2.Models.Person
    <script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>

    <form class="col s12" method="post" action="/Home/Edit/@Model.Id">
        <div class="editor-label">
            <label>Name</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Name)
        </div>
        <div class="editor-label">
            <label>Card</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Card)
        </div>
        <div class="editor-label">
            <label>Date</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Date, new { @id = "datepicker", @style = "width:150px;" })
        </div>
        <div class="editor-label">
            <label>PC No.</label>
        </div>
        <div class="editor-field">             
            @Html.DropDownList("PCNum", ViewData["pcNum"] as List<SelectListItem>)
        </div>
        <div class="editor-label">
            <label>Time Period</label>
        </div>
        <div class="editor-field">             
            @Html.DropDownList("State", new SelectList(string.Empty, "Value", "Text"))
        </div>
        <div class="row">
            <div class="input-field col s12 right-align">
                <input type="submit" value="update" class="btn">
                <a href="/" class="btn">Cancel</a>
            </div>
        </div>
    </form>
<script type="text/javascript">
    $(document).ready(function () {
        $("#PCNum").change(function () {
            $("#State").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetStates")', 
 
                dataType: 'json',
 
                data: { id: $("#PCNum").val() }, 

                success: function (states) {
 
                    $.each(states, function (i, state) {
                    $("#State").append('<option value="' + state.Value + '">' +  
                         state.Text + '</option>');                                                                                                
 
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        })
    });
</script>